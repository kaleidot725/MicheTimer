<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable name="timerViewModel" type="kaleidot725.michetimer.main.TimerViewModel"/>
    </data>

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:elevation="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        card_view:cardCornerRadius="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/option_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#00000000"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="@{timerViewModel::popupOption}"
                android:src="@drawable/ic_card_menu"
                card_view:layout_constraintBottom_toTopOf="@+id/remain_seconds_button"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toEndOf="@+id/name_textview"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/name_textview"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="#00000000"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:text="@={timerViewModel.name}"
                android:textSize="@dimen/large_text"
                card_view:layout_constraintBottom_toBottomOf="@+id/option_button"
                card_view:layout_constraintEnd_toStartOf="@+id/option_button"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="@+id/option_button" />

            <TextView
                android:id="@+id/remain_seconds_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="#00000000"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="@{timerViewModel::display}"
                android:text="@={timerViewModel.remainSeconds}"
                android:textAlignment="center"
                android:textSize="@dimen/huge_text"
                android:textStyle="normal"
                card_view:layout_constraintBottom_toTopOf="@+id/reset_button"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/option_button" />

            <LinearLayout
                android:id="@+id/reset_button"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:background="#00000000"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:onClick="@{timerViewModel::reset}"
                android:orientation="horizontal"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toStartOf="@+id/run_button"
                card_view:layout_constraintHorizontal_chainStyle="spread_inside"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/remain_seconds_button">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_card_menu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:gravity="center"
                    android:text="Reset"
                    android:textSize="@dimen/middle_text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/run_button"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:background="#00000000"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:onClick="@{timerViewModel::run}"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toEndOf="@+id/reset_button"
                card_view:layout_constraintTop_toBottomOf="@+id/remain_seconds_button"
                card_view:layout_constraintVertical_bias="0.714">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_card_menu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:gravity="center"
                    android:text="@={timerViewModel.state}"
                    android:textSize="@dimen/middle_text" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>

