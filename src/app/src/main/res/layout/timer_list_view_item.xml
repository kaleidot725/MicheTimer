<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable name="timerViewModel" type="kaleidot725.michetimer.TimerViewModel"/>
    </data>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="top"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        card_view:cardCornerRadius="5dp">

        <RelativeLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/option_button"
                android:layout_width="40dp"
                android:padding="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:text="ï¸™"
                style="?android:attr/borderlessButtonStyle" />

            <TextView
                android:id="@+id/name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|top"
                android:text="@{timerViewModel.name}"
                android:textSize="24dp"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/remain_seconds_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@{timerViewModel.remainSeconds}"
                android:textSize="64dp" />

            <Button
                android:id="@+id/reset_button"
                android:layout_width="64dp"
                android:layout_height="32dp"
                android:padding="5dp"
                android:textSize="16dp"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@+id/run_button"
                android:text="Reset"
                android:onClick="@{timerViewModel::reset}"
                android:textColor="@color/colorPrimary"
                style="?android:attr/borderlessButtonStyle" />

            <Button
                android:id="@+id/run_button"
                android:layout_width="64dp"
                android:layout_height="32dp"
                android:padding="5dp"
                android:textSize="16dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:text="@{timerViewModel.state}"
                android:onClick="@{timerViewModel::run}"
                android:textColor="@color/colorPrimary"
                style="?android:attr/borderlessButtonStyle" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>

